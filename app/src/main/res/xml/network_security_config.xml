<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许明文 HTTP 连接（用于本地部署的模型如 Ollama, vLLM 等） -->
    <!-- 注意：仅在用户手动配置本地 API 地址时使用 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
